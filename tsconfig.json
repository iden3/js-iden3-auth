{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "dist/cjs",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@lib/*": ["./src/*"]
    }
  },
  "include": ["src", "test"]
}
